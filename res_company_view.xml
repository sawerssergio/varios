<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_company_form_pos" model="ir.ui.view">
          
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="branch_office" string="Nombre Sucursal"/>
                </xpath>
                <notebook position="inside">
                    <page string="Invoicing" position="inside">
                        <separator string="Invoicing Legend" colspan="4"/>
                        <field name="invoice_legend" nolabel="1" colspan ="4"/>
                    </page>
                </notebook>

            </field>
        </record>
    </data>
</openerp>
