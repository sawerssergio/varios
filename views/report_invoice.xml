<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="bolivian_invoice_style" inherit_id="report.layout">
    <xpath expr="//style" position="after">
        <style type="text/css">
            hr {
               border: 1px solid black; 
               } 
        </style>
    </xpath>

</template>


<template id="bolivian_invoice">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <!--<t t-call="report.external_layout">-->
                <div class="page">
                    <center>
                        <div t-if="o.company_id.name">
                            <strong><t t-esc="o.company_id.name"/></strong>
                        </div>
                        <!--<div t-if="o.company_id.branch_office">
                            <strong><t t-esc="o.company_id.branch_office"/></strong>
                        </div>-->
                        <div t-if="o.company_id.street">
                            <strong><t t-esc="o.company_id.street"/></strong>
                        </div>
                        <div t-if="o.company_id.street2">
                            <strong><t t-esc="o.company_id.street2"/></strong>
                        </div>
                        <div t-if="o.company_id.phone">
                            <strong>
                                Telefono: <t t-esc="o.company_id.phone"/>
                            </strong>
                        </div>
                        <div t-if="o.company_id.city and o.company_id.country_id">
                            <strong><t t-esc="o.company_id.city"/>-<t t-esc="o.company_id.country_id.name"/></strong>
                        </div>
                        <div>
                            <strong>F A C T U R A</strong>
                        </div>
                    </center>
                    <hr/>
                    <center>
                    <div t-if="o.company_id.vat">
                        NIT: <t t-esc="o.company_id.vat"/>
                    </div>
                    <div t-if="o.invoice_id.number">
                        FACTURA No. <t t-esc="int(o.invoice_id.number)"/>
                    </div>
                    <div t-if="o.session_id.config_id.authorization">
                        AUTORIZACION No. <t t-esc="o.session_id.config_id.authorization"/>
                    </div>
                    </center>
                    <hr/>
                    <strong>Actividad Economica:</strong>
                    <center>
                    <div t-if="o.invoice_id.date_invoice">
                        FECHA: <t t-esc="date_invoice"/>
                    </div>
                    <div t-if="o.partner_id.name">
                        SENOR(ES): <t t-esc="o.partner_id.name"/>
                    </div>
                    <div t-if="o.partner_id.vat">
                        NIT/CI: <t t-esc="o.partner_id.vat"/>
                    </div>
                    </center>
                    <hr/>
                    <table class="table table-condensed mb32">
                        <thead>
                            <tr>
                                <th>
                                    <p>CANT</p>
                                </th>
                                <th>
                                    <p>CONCEPTO</p>
                                </th>
                                <th>
                                    <p>PRECIO</p>
                                </th>
                                <th>
                                    <p>TOTAL</p>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.invoice_id.invoice_line" t-as="line">
                                <t t-if="line.price_unit != 0.0">
                                <td>
                                    <t t-esc="int(line.quantity)"/>
                                </td>
                                <td>
                                    <t t-esc="line.product_id.name_template"/>
                                </td>
                                <td>
                                    <t t-esc="'%.2f' % line.price_unit"/>
                                </td>
                                <td>
                                    <t t-esc="'%.2f' % (line.price_unit*int(line.quantity))"/>
                                </td>
                                </t>
                            </tr>
                        </tbody>
                    </table>
                    <hr/>
                    <div class="text-right" t-if="o.invoice_id.amount_total">
                        TOTAL Bs. <t t-esc="'%.2f' % o.invoice_id.amount_total"/>
                        <br/>
                        EFECTIVO Bs. <t t-esc="'%.2f' % paid"/>
                        <br/>
                        CAMBIO Bs. <t t-esc="'%.2f' % due"/>
                    </div>
                    <br/>
                    <div t-if="o.invoice_id.amount_total">
                        SON: <span t-esc="num2words(o.invoice_id.amount_total)"/>
                    </div> 
                    <div t-if="o.invoice_id.control_code">
                        CODIGO DE CONTROL: <t t-esc="o.invoice_id.control_code"/>
                    </div>
                    <br/>
                    <div t-if="o.session_id.config_id.limit_date">
                        FECHA LIMITE DE EMISION: <t t-esc="o.session_id.config_id.limit_date"/>
                    </div>
                    <!--<div t-if="o.name">
                        Pedido: <t t-esc="o.name"/>
                    </div>-->
                    <div t-if="o.invoice_id.user_id.partner_id.name">
                        VENDEDOR: <t t-esc="o.invoice_id.user_id.partner_id.name"/>
                    </div>
                    <br/>

                    <div>
                        <center>
                            <img  t-att-src="qr_string" height="100" width="100"/>
                        </center>
                    </div> 
                    <hr/>
                    <div t-if="o.company_id.invoice_legend">
                        <p><t t-esc="o.company_id.invoice_legend"/></p>
                    </div>
                </div>
        </t>
    </t>
</template>

</data>
</openerp>
